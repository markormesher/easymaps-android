<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:paddingTop="@dimen/space_micro"
		android:paddingBottom="@dimen/space_micro"
		android:paddingLeft="@dimen/space_micro"
		android:paddingRight="@dimen/space_micro"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:weightSum="1"
		android:background="@color/primary">

	<ImageView
			android:id="@+id/status_icon"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginRight="@dimen/space_micro"
			android:layout_marginEnd="@dimen/space_micro"
			android:src="@drawable/ic_info_outline_white_48dp"
			android:tint="@color/white"/>

	<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

		<TextView
				android:id="@+id/status_heading"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:ellipsize="marquee"
				android:fadingEdge="horizontal"
				android:marqueeRepeatLimit="marquee_forever"
				android:textColor="@color/white"
				style="@style/Text.SubHeading"/>

		<TextView
				android:id="@+id/status_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:maxLines="2"
				android:ellipsize="marquee"
				android:fadingEdge="horizontal"
				android:marqueeRepeatLimit="marquee_forever"
				android:textColor="@color/white"
				style="@style/Text"/>

	</LinearLayout>

</LinearLayout>
