<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="?attr/selectableItemBackground">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/space_nano">

		<LinearLayout
				android:id="@+id/route_colour_bar"
				android:layout_width="match_parent"
				android:layout_height="@dimen/space_small"
				android:layout_alignParentTop="true"
				android:orientation="horizontal"
				android:weightSum="1">

			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginEnd="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="1dp" android:layout_marginLeft="1dp" android:layout_weight="0"/>
			<View android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="1dp" android:layout_marginStart="1dp" android:layout_weight="0"/>

		</LinearLayout>

		<TextView
				android:id="@+id/route_summary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/route_colour_bar"
				android:layout_marginTop="@dimen/space_nano"
				style="@style/Text.ListTitle"/>

		<TextView
				android:id="@+id/route_details"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/route_summary"
				android:layout_marginTop="@dimen/space_nano"
				style="@style/Text.ListDetail"/>

	</RelativeLayout>

	<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/divider"/>

</LinearLayout>
