<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

	<uk.co.markormesher.easymaps.mapperapp.ui.RouteStepIndicator
			android:id="@+id/indicator"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/space_micro"
			android:layout_marginStart="@dimen/space_micro"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/space_nano"
			android:layout_marginBottom="@dimen/space_nano"
			android:layout_marginLeft="@dimen/space_micro"
			android:layout_marginRight="@dimen/space_micro"
			android:orientation="vertical">

		<TextView
				android:id="@+id/location_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/Text.ListTitle"/>

		<TextView
				android:id="@+id/instruction"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/Text.Note"/>

	</LinearLayout>

</LinearLayout>
