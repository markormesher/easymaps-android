<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/drawer_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.MainActivity">

	<LinearLayout
			android:id="@+id/status_bar_wrapper"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:paddingTop="@dimen/space_micro"
			android:paddingBottom="@dimen/space_micro"
			android:paddingLeft="@dimen/space_micro"
			android:paddingRight="@dimen/space_micro"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:weightSum="1"
			android:background="@color/primary">

		<ImageView
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginRight="@dimen/space_micro"
				android:layout_marginEnd="@dimen/space_micro"
				android:src="@drawable/ic_info_outline_white_48dp"
				android:tint="@color/white"/>

		<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Status Heading"
					android:layout_marginBottom="@dimen/space_nano"
					style="@style/Text.SubHeading"
					android:textColor="@color/white"/>

			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Status message"
					style="@style/Text"
					android:textColor="@color/white"/>

		</LinearLayout>

	</LinearLayout>

</RelativeLayout>
