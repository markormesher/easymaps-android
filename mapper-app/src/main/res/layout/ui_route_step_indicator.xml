<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		>

	<View
			android:id="@+id/center_marker"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_centerInParent="true"
			/>

	<View
			android:id="@+id/top_pipe"
			android:layout_width="6dp"
			android:layout_height="match_parent"
			android:layout_above="@id/center_marker"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:background="@color/black"
			/>

	<View
			android:id="@+id/bottom_pipe"
			android:layout_width="6dp"
			android:layout_height="match_parent"
			android:layout_below="@id/center_marker"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:background="@color/black"
			/>

	<View
			android:id="@+id/station_marker"
			android:layout_width="8dp"
			android:layout_height="3dp"
			android:layout_centerVertical="true"
			android:layout_marginLeft="3dp"
			android:layout_marginStart="3dp"
			android:background="@color/black"
			/>

	<View
			android:id="@+id/change_marker"
			android:layout_width="12dp"
			android:layout_height="12dp"
			android:layout_centerInParent="true"
			android:background="@drawable/route_step_dot"
			/>

</RelativeLayout>
