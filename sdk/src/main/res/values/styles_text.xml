<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!--
	Unless specified, the default font is fonts/Lato-Regular.ttf.
	It is set in BaseActivity.
	-->

	<style name="Text" parent="TextAppearance.AppCompat">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/primary_text</item>
	</style>

	<style name="Text.Heading" parent="Text">
		<item name="fontPath">fonts/Lato-Bold.ttf</item>
		<item name="android:textSize">22sp</item>
	</style>

	<style name="Text.SubHeading" parent="Text">
		<item name="fontPath">fonts/Lato-Bold.ttf</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Text.ListTitle" parent="Text">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Text.ListDetail" parent="Text">
		<item name="fontPath">fonts/Lato-Light.ttf</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Text.Note" parent="Text">
		<item name="fontPath">fonts/Lato-Light.ttf</item>
	</style>

	<style name="Text.Error" parent="Text">
		<item name="fontPath">fonts/Lato-Bold.ttf</item>
		<item name="android:textColor">@color/error_text</item>
	</style>

</resources>
